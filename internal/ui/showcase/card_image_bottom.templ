package showcase

import (
	"github.com/axzilla/templui/component/aspectratio"
	"github.com/axzilla/templui/component/button"
	"github.com/axzilla/templui/component/card"
)

templ CardImageBottom() {
	<div class="w-full max-w-sm">
		@card.Card() {
			@card.Header() {
				@card.Title() {
					Featured Card
				}
				@card.Description() {
					With bottom image
				}
			}
			@card.Content() {
				<p>This card shows bottom image usage.</p>
			}
			@card.Footer() {
				@button.Button() {
					Learn more
				}
			}
			@card.Media(card.MediaProps{
				ID:          "bottom-media",
				Alt:         "Card image",
				Position:    card.MediaPositionBottom,
				AspectRatio: aspectratio.RatioVideo,
				Src:         "/assets/img/card_placeholder.jpeg",
			},
			)
		}
	</div>
}
